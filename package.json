{
  "name": "adventour-travel-website",
  "version": "1.0.0",
  "description": "A modern travel booking website inspired by Airbnb",
  "main": "index.html",
  "scripts": {
    "start": "node server.js",
    "dev": "npx live-server --port=3000 --open=/index.html",
    "server": "node server.js",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "npx clean-css-cli -o assets/css/style.min.css assets/css/style.css",
    "minify-js": "npx uglify-js assets/js/main.js -o assets/js/main.min.js",
    "lint": "npx eslint assets/js/*.js",
    "format": "npx prettier --write assets/css/*.css assets/js/*.js *.html"
  },
  "keywords": [
    "travel",
    "booking",
    "airbnb",
    "hotel",
    "accommodation",
    "tourism",
    "vacation"
  ],
  "author": "Adventour Team",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "prettier": "^3.2.5",
    "uglify-js": "^3.17.4"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "nodemailer": "^6.9.8",
    "multer": "^1.4.5-lts.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.3",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adventour/travel-website.git"
  },
  "bugs": {
    "url": "https://github.com/adventour/travel-website/issues"
  },
  "homepage": "https://adventour.com"
}
